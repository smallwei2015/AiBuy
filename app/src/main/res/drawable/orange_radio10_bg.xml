        <shape>
            <corners android:radius="@dimen/dp10"/>
            <solid android:color="@color/orange_pressed"/>
            <padding android:top="@dimen/dp3" android:right="@dimen/dp5" android:left="@dimen/dp5" android:bottom="@dimen/dp3"/>
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="@dimen/dp10"/>
            <solid android:color="@color/orange"/>
            <padding android:top="@dimen/dp3" android:right="@dimen/dp5" android:left="@dimen/dp5" android:bottom="@dimen/dp3"/>
        </shape>
    </item>
</selector>