<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vode.aibuy.activity.OrderActivity"
    android:orientation="vertical"
    android:background="@color/bglight">

    <include layout="@layout/layout_top"/>

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/order_tab"
        android:layout_below="@+id/toolbar"
        android:translationZ="@dimen/dp5"
        app:tabTextAppearance="@android:style/TextAppearance.Holo.Medium"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/textdark"
        app:tabTextColor="@color/textlight"
        android:background="@color/white"
        app:tabIndicatorColor="@color/textdark"/>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/order_pager"
        android:layout_below="@+id/order_tab"/>
</LinearLayout>
