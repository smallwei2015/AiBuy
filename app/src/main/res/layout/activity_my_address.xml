<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vode.aibuy.activity.MyAddressActivity">

    <include layout="@layout/layout_top"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/address_add"
        android:id="@+id/address_rec"/>

    <TextView
        style="@style/login_btn"
        android:layout_alignParentBottom="true"
        android:translationZ="@dimen/dp5"
        android:text="新建收货地址"
        android:id="@+id/address_add"
        android:onClick="btn_addAddress"/>

</RelativeLayout>
